# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
   colors = true
   interval = 5
}

order += "window_title"

order += "bluetooth"
order += "wifi"
order += "disk /"
order += "volume_status"
order += "backlight"
order += "load"
order += "battery_level"
order += "clock"

clock {
   cycle = 30
   format = ["{Europe/Stockholm}"]
   format_time = "%d/%m-%y %H:%M:%S"
}

window_title {
   format = "{title}|♥"
}

wifi {
   format = "W:{signal_percent} {ip}|W: down"
}

tztime local {
   format = "%d/%m-%y %H:%M:%S"
}

load {
   format = "L: %1min"
}

disk "/" {
   format = "D: %avail"
}
