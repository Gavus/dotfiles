#!/bin/bash

if test "${#}" -lt 1; then
	echo "$0 <command to execute outside of container>."
	exit 1
fi

if test ! -f "/.dockerenv" && test ! -f "/run/.containerenv"; then
	echo "$0 must be executed in a container."
	exit 1
fi

if test "$(which flatpak-spawn)"; then
	flatpak-spawn --host "$@"
elif test -f "/usr/libexec/flatpak-xdg-utils/flatpak-spawn"; then 
	/usr/libexec/flatpak-xdg-utils/flatpak-spawn --host "$@"
else
	echo "flatpak-xdg-utils not installed."
	exit 1
fi
